<header class="login">
    <div>
        <h1>
            <a href="#">Log in</a>
        </h1>
    </div>
</header>

<section id="home">
    <article class="login">
        <section>
            <div class="post-content">
             <div id="form">
               <div class="ui grid">
                 <div class="eight wide column centered">
                   <div class="ui form">
                      <%= form_for :session, url: login_path do |f| %>

                           <%= f.label :email %>:
                           <%= f.email_field :email %><br />

                           <%= f.label :password %>:
                           <%= f.password_field :password %><br />

                       <%= f.submit %>
                     <% end %>
                   </div>
                 </div>
               </div>
             </div>     
            </div>
        </section>
    </article>
</section>