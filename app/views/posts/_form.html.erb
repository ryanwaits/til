<header class="login">
    <div>
        <h1>
            <a href="#">What did you learn?</a>
        </h1>
    </div>
</header>
<div id="form">
  <div class="ui grid">
    <div class="eight wide column centered">
      <div class="ui form">
         <%= form_for @post do |f| %>
              <%= f.label :title %>:
              <%= f.text_field :title %><br />

              <%= f.label :hashtag %>:
              <%= f.text_field :hashtag %><br />

              <%= f.label :body %>:
              <%= f.text_area :body %><br />

          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>